<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feature_genres_nav"
    app:startDestination="@id/genresFragment">


    <fragment
        android:id="@+id/genresFragment"
        android:name="com.noatnoat.genres.presentation.genresscreen.GenresFragment"
        android:label="GenresFragment" >
        <action
            android:id="@+id/action_genresFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.noatnoat.genres.presentation.detailscreen.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="idComic"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.noatnoat.genres.presentation.infoscreen.InfoFragment"
        android:label="InfoFragment" >
        <action
            android:id="@+id/action_infoFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
        />
    </fragment>

</navigation>