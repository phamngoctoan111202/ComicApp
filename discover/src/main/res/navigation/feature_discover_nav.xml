<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feature_discover_nav"
    app:startDestination="@id/discoverFragment">


    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.noatnoat.discover.presentation.discoverscreen.DiscoverFragment"
        android:label="DiscoverFragment" >
        <action
            android:id="@+id/action_discoverFragment_to_infoFragment"
            app:destination="@id/infoFragment"
            app:enterAnim="@anim/slide_in_right" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.noatnoat.discover.presentation.detailscreen.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="idComic"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.noatnoat.discover.presentation.infoscreen.InfoFragment"
        android:label="InfoFragment" >

        <action
            android:id="@+id/action_infoFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right" />
    </fragment>
</navigation>